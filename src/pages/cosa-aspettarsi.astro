    </Section>
    <Section background="bg-primary">
      
      <h3 class="text-center mt-6">
        Hai altre domande?
        <ButtonLink href="/contatti">Contattami!</ButtonLink>
      </h3>
    </Section>
  </Hero>
</Layout>
<script is:inline>
  const acc = document.getElementsByClassName("accordion");
  let i;
  let panel = null;

  for (i = 0; i < acc.length; i++) {
    acc[i].addEventListener("click", function (ev) {
      closeAll(ev.target);
      this.classList.toggle("active");
      panel = this.nextElementSibling;
      if (panel.style.maxHeight) {
        panel.style.maxHeight = null;
      } else {
        panel.style.maxHeight = panel.scrollHeight + "px";
      }
    });
  }

  function closeAll(tar) {
    const accs = document.querySelectorAll(".accordion");
    for (let i = 0; i < accs.length; i++) {
      if (accs[i] == tar) {
        continue;
      }
      accs[i].classList.remove("active");
      const panel = accs[i].nextElementSibling;
      panel.style.maxHeight = null;
    }
  }
</script>
