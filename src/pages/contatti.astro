---
import Hero from '../components/Hero.astro';
import Layout from '../layouts/Layout.astro';
import Section from '../components/Section.astro';
import WhatsappIcon from '../assets/whatsapp.svg';
import EmailIcon from '../assets/mail.svg';
import { Image } from 'astro:assets';
import BackgroundImage from '../assets/foto/contacts.jpg'
---

<Layout>
  <Hero image={BackgroundImage}>
    <Section isFullHeight>
      <div class="flex flex-col items-center justify-center">
        <h1>Contatti</h1>
        <div class="columns-1 lg:columns-2 gap-8 m-8">
          <div>
            <a href="tel:+39333-3333355">
              <Image src={WhatsappIcon} class="inline" alt="Elisa Soldi Logo" style="width: 3rem;height: auto;" />  
              333-3333355
            </a>
          </div>
          <div>
            <a href="mailto:elisa@gmail.com">
              <Image src={EmailIcon} class="inline" alt="Elisa Soldi Logo" style="width: 3rem;height: auto;" /> 
              elisa@gmail.com        
            </a>  
          </div>
        </div>
        <p class="mb-8">Se preferisci compila i campi qua sotto per contattarmi</p>
        <form class="w-full max-w-lg">
            <div class="flex flex-wrap -mx-3 mb-6">
              <div class="w-full px-3 mb-6 md:mb-0">
                <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-first-name">
                  Nome
                </label>
                <input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-3 leading-tight bg-white" id="grid-first-name" type="text">
                <p class="text-red text-xs italic text-right">Please fill out this field.</p>
              </div>
              <div class="w-full px-3">
                <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-last-name">
                  Email
                </label>
                <input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight bg-white focus:border-gray-500" id="grid-last-name" type="text">
              </div>
            </div>
            <div class="flex flex-wrap -mx-3 mb-6">
              <div class="w-full px-3">
                <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-password">
                  Motivo della tua richiesta
                </label>
                <textarea class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight bg-white focus:border-gray-500" id="grid-password"></textarea>
              </div>
            </div>
          </form>
      </div>
    </Section>
  </Hero>
</Layout>
